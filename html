<input type="file" id="file" accept="image/*" hidden>
<input type="color" id="corVotos" hidden>

<script>
let alvoImg = null;

function escolherImagem(btn){
    alvoImg = btn.parentElement.querySelector("img");
    document.getElementById("file").click();
}

document.getElementById("file").addEventListener("change", e=>{
    const file = e.target.files[0];
    if(!file) return;
    const reader = new FileReader();
    reader.onload = () => alvoImg.src = reader.result;
    reader.readAsDataURL(file);
});

/* ARRASTAR */
function arrastar(e, topo){
    const janela = topo.parentElement;
    let x = e.clientX - janela.offsetLeft;
    let y = e.clientY - janela.offsetTop;

    function mover(ev){
        janela.style.left = (ev.clientX - x) + "px";
        janela.style.top = (ev.clientY - y) + "px";
    }

    function parar(){
        document.removeEventListener("mousemove", mover);
        document.removeEventListener("mouseup", parar);
    }

    document.addEventListener("mousemove", mover);
    document.addEventListener("mouseup", parar);
}

/* FUNDO DO SITE */
function trocarModo(){
    document.body.classList.toggle("claro");
}

/* COR DOS VOTOS */
function mudarCor(){
    document.getElementById("corVotos").click();
}

document.getElementById("corVotos").addEventListener("input", e=>{
    document.querySelectorAll(".votos").forEach(v=>{
        v.style.color = e.target.value;
    });
});
</script>

